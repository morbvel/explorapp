		<!--Script para dejar fijo el menu-->
		<script>
			$(window).bind('scroll', function () {
				var w = $(window).width();
				if( w > 1300 && $(window).scrollTop() > 80 ){
					$('.contenedorMenu2').addClass('menuFijo2');
				}
				else if ( w < 1300 && $(window).scrollTop() > 100 ){
					$('.contenedorMenu2').addClass('menuFijo2');
				}
				else{
					$('.contenedorMenu2').removeClass('menuFijo2');
				}
			});
		</script>
		
		
