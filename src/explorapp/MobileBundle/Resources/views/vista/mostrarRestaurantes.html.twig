{% extends 'MobileBundle::plantillaMostrar.html.twig' %}

{%block tituloPagina%}
	Mostrar Restaurantes
{%endblock%}

{%block contenidoInicial%}
	<ul data-role="listview" data-inset="true" >
		<li>
			<a href="{{path('mobile_formlogin')}}" id="abrirNuevoRegistro">
				<img src="{{asset(rutaImagenPerfil)}}" alt="Login" class="ui-li-icon" i>
				{{textoRecuadro}}
			</a>
			<a href="{{path('mobile_perfilusuario')}}" id="abrirPerfilUsuario">
				<img src="{{asset(rutaImagenPerfil)}}" alt="Perfil de Usuario" class="ui-li-icon" i>
				{{textoRecuadro}}
			</a>
		</li>
	</ul>


	<div id="contenidoMostrarRestaurantes" class="contenidoMostrarNegocios">
		<table class="tablaNegocios">
			<thead>
				<tr colspan="3">
				   	<th>Nombre</th>
					<th>Ciudad</th>
					<th></th>
				</tr>
		    </thead>
		    <tbody>
		    	{% for restaurante in listadoRestaurantes %}
					<tr colspan="3">
					    <td >{{restaurante.nombreNegocio}}</td>
						<td >{{restaurante.ciudadNegocio}}</td>
						{% for usuario in usuarios %}
							{%if usuario.Id == restaurante.idUsuario%}
								{% set rutaImagen = 'DirectoriosUsuarios/'~usuario.userName~'/Negocios/'~restaurante.nombreNegocio~'.jpg' %}
								<td class="tdImagenNegocio"><input type="image" src="{{ asset(rutaImagen) }}" class="fotoNegocio2" onclick="location.href='{{ path('mobile_perfilnegocio', {'idNegocio': restaurante.idNegocio, 'idUsuario':restaurante.idUsuario}) }}';" /></td>
							{%endif%}
						{%endfor%}
					</tr>
				{%endfor%}
		    </tbody>

		</table>
{%endblock%}